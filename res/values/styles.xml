<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RSSFeed" parent="AppBaseTheme">

        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:windowBackground">@color/AppDefaultBackgroundColor</item>
    </style>

    <style name="ArticleView" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/AppDefaultBackgroundColor</item>
        <!-- <item name="android:windowTitleBackgroundStyle"></item> -->
        <!-- For API 11+ -->
        <!-- <item name="android:actionBarStyle"></item> -->
    </style>

    <style name="SettingsActivity" parent="AppBaseTheme"></style>

    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>